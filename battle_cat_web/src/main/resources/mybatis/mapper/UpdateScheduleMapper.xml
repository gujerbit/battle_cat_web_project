<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gujerbit.battle_cat_web.dao.UpdateScheduleDAO">
	<select id="selectUpdateScheduleTitle" resultType="UpdateScheduleVO">
		SELECT DISTINCT title, update_date, version FROM update_schedule ORDER BY id DESC LIMIT #{limit}, 5
	</select>
	<select id="selectUpdateSchedule" resultType="UpdateScheduleVO">
		SELECT * FROM update_schedule WHERE version = #{version} ORDER BY id DESC
	</select>
	<select id="selectUpdateScheduleSize" resultType="int">
		SELECT COUNT(DISTINCT version) FROM update_schedule;
	</select>
</mapper>